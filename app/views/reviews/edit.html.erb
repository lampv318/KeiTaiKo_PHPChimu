<%= provide :title, t(".title") %>
<div class="sub-banner overview-bgi">
  <div class="container">
    <div class="breadcrumb-area">
      <h1><%= t(".title") %></h1>
        <ul class="breadcrumbs">
          <li><%= link_to t(".home"), root_path %></li>
          <li class="active"><%= t(".title") %></li>
        </ul>
    </div>
  </div>
</div>
<div class="user-page submit-property content-area-7">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="search-area contact-2">
          <div class="search-area-inner">
            <div class="search-contents ">
              <%= form_for @review do |f| %>
                <h3 class="heading"><%= raw t(".title") %></h3>
                <div class="row mb-50">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :name %><br>
                      <%= f.text_field :name, class: "form-control" %>
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                      <%= f.label :screen_size %><br>
                      <%= f.number_field :screen_size, step: 0.1, class: "form-control" %>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                      <%= f.label :price %><br>
                      <%= f.number_field :price, class: "form-control" %>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                      <%= f.label :operator_system %><br>
                      <%= f.select :operator_system_id,
                                    OperatorSystem.all.collect { |p| [ p.name, p.id ] },
                                                               {}, {class: "selectpicker search-fields"}  %>
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                      <%= f.label :cpu %><br>
                      <%= f.text_field :cpu, class: "form-control" %>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                      <%= f.label :battery %><br>
                      <%= f.text_field :battery, class: "form-control" %>
                      </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="form-group">
                      <%= f.label :brand %><br>
                      <%= f.select :brand_id, Brand.all.collect { |p| [ p.name, p.id ] }, {}, {class: "selectpicker search-fields"} %>
                    </div>
                  </div>
                  <div class="col-lg-3">
                    <%= f.label :picture %><br>
                    <%= f.file_field :picture %>
                  </div>
                  <div class="col-lg-12 col-md-6">
                    <div class="form-group">
                      <%= f.label :review %><br>
                      <%= f.text_area :review, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-lg-12">
                  <%= f.submit t(".update_button"),class: "btn btn-color btn-md" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
